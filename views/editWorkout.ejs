<%- include("header") %>
<div class="container mt-5">
  <h1 class="text-center text-light mb-4">Edit Workout</h1>
  <form action="/edit/<%= workout._id %>" method="POST" class="shadow-sm p-4 bg-dark text-light rounded">
    <div class="mb-3">
      <label for="name" class="form-label">Workout Name</label>
      <input
        type="text"
        id="name"
        name="name"
        value="<%= workout.name %>"
        class="form-control bg-dark text-light border-secondary"
        required
      >
    </div>
    <div class="mb-3">
      <label for="duration" class="form-label">Duration (minutes)</label>
      <input
        type="number"
        id="duration"
        name="duration"
        value="<%= workout.duration %>"
        class="form-control bg-dark text-light border-secondary"
        required
      >
    </div>
    <button type="submit" class="btn btn-outline-light btn-lg w-100 shadow">Update Workout</button>
  </form>
</div>
<%- include("footer") %>
