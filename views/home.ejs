<%- include("header") %>
<h1>Workout Tracker</h1>
<a href="/add">Add New Workout</a>
<ul>
  <% workouts.forEach((workout) => { %>
    <li>
      <strong><%= workout.name %></strong> - <%= workout.duration %> mins
      <a href="/edit/<%= workout._id %>">Edit</a>
      <form action="/delete/<%= workout._id %>" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }); %>
</ul>
<%- include("footer") %>
