<%- include("header") %>
<div class="container mt-5">
  <h1 class="text-center text-light mb-4">Add New Workout</h1>
  <form action="/add" method="POST" class="shadow-sm">
    <div class="mb-3">
      <label for="name" class="form-label">Workout Name</label>
      <input type="text" id="name" name="name" class="form-control bg-dark text-light border-secondary" required>
    </div>
    <div class="mb-3">
      <label for="duration" class="form-label">Duration (minutes)</label>
      <input type="number" id="duration" name="duration" class="form-control bg-dark text-light border-secondary" required>
    </div>
    <button type="submit" class="btn btn-outline-light btn-lg w-100">Add Workout</button>
  </form>
</div>
<%- include("footer") %>
